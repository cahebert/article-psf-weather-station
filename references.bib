	journal = {Astronomy \& Astrophysics},
	author = {Asgari, Marika and Heymans, Catherine and Hildebrandt, Hendrik and Miller, Lance and Schneider, Peter and Amon, Alexandra and Choi, Ami and Erben, Thomas and Georgiou, Christos and Harnois-Deraps, Joachim and Kuijken, Konrad},
